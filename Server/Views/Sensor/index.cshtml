@model Server.Models.SensorView
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">Registro de sensores </h2>

@if (ViewBag.mensaje != null)
{
    if (ViewBag.error)
    {
        <div class="alert alert-danger">
            @ViewBag.mensaje
        </div>
    }
    else
    {
        <div class="alert alert-success">
            @ViewBag.mensaje
        </div>
    }
}

<section class="widget">
    <header>
        <h4>
            Registros de datos de sensores
        </h4>
        <div class="widget-controls">
            <a data-widgster="expand" title="Expandir" href="#"><i class="glyphicon glyphicon-plus"></i></a>
            <a data-widgster="collapse" title="Colapsar" href="#"><i class="glyphicon glyphicon-minus"></i></a>
            <a data-widgster="close" title="Cerrar" href="#"><i class="glyphicon glyphicon-remove"></i></a>
        </div>
    </header>
    <div class="widget-table-overflow">
        <table id="myTable" class="table table-striped table-lg mt-sm mb-0 sources-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Sensor Id</th>
                    <th>Valor Medido</th>
                    <th>Fecha y Hora registrada</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.sensores)
                {
                    <tr>
                        <td>@a.ID_REG</td>
                        <td>@a.ID_SENSOR</td>
                        <td>@a.MEDICION</td>
                        <td>@a.FECHAYHORA</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>




