<!DOCTYPE html>
<html>
<head>
    <title>Monitor de Ruido en Bogotá</title>

    <link href="~/Content/css/application.css" rel="stylesheet">
    <link rel="shortcut icon" href="~/Content/img/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Página web para la asignatura de Programación Web de la Facultad de Ingeniería electrónica de la Universidad Santo Tomás">
    <meta name="author" content="Javier Cárdenas - William Pinto">
    <meta charset="utf-8">
    <script>
        /* yeah we need this empty stylesheet here. It's cool chrome & chromium fix
           chrome fix https://code.google.com/p/chromium/issues/detail?id=167083
                      https://code.google.com/p/chromium/issues/detail?id=332189
        */
    </script>

</head>
<body>
    <div class="logo">
        <h3><a href="/Home/Index">Noise <br/>Monitor<br /></a></h3>
    </div>
    <nav id="sidebar" class="sidebar nav-collapse collapse">
        <ul id="side-nav" class="side-nav">
            <li class="active" name="Monitor" id="Home">
                <a href="/Home/Index"><i class="fa fa-home"></i> <span class="name">Principal</span></a>
            </li>

            <li class="panel" name="Admin" id="User">
                <a href="/User/Load"><i class="fa fa-magic"></i> <span class="name">Usuarios</span></a>
            </li>
            <li class="panel" name="Admin" id="Sensor">
                <a href="/Sensor/Load"><i class="fa fa-magic"></i> <span class="name">Sensores</span></a>
            </li>
            <li class="panel" name="Monitor" id="Reporte">
                <a href="/Reporte/Load"><i class="fa fa-magic"></i> <span class="name">Registros</span></a>
            </li>
        </ul>
        <br />
        <ul id="account-menu" role="menu">
            <li role="presentation">
                <h4>Bienvenido</h4>
            </li>
            <li role="presentation" class="account-picture">
                <img src="~/Content/img/1.png" alt="">
            </li>
            <li role="presentation">
                <label id="Usernombre"></label>
            </li>
            <li role="presentation">
                <a>
                    <i class="fa fa-user"></i>
                    <label id="UserRol"></label>
                </a>
            </li>
            
        </ul>
       
        

    </nav>
    <div class="wrap">
        <header class="page-header">
            <div class="navbar">
                <ul class="nav navbar-nav navbar-right pull-right">
                    <li class="hidden-xs"><a href="/Login/Logout"><i class="glyphicon glyphicon-off"></i></a></li>
                </ul>
            </div>
        </header>
        <div class="content container">
            @RenderBody()
        </div>
        <div class="loader-wrap hiding hide">
            <i class="fa fa-circle-o-notch fa-spin"></i>
        </div>
    </div>

    <script>
        var x = document.cookie;
        var rol = x.split("UserRol=")[1];
        var nombre = x.split("&UserRol=")[0].split("UserName=")[1];

        if (x.split("UserRol=")[1] == "MONITOR") {
            elements = document.getElementsByName("Admin");
            for (i = 0; i < elements.length; i++) {
                elements[i].hidden = true;
            }
        }
        document.getElementById("Usernombre").innerText  = "Nombre: " + nombre;
        document.getElementById("UserRol").innerText  = "Rol: " + rol;
    </script>
    <!-- common libraries. required for every page-->
    <script src="~/Scripts/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/Scripts/lib/jquery-pjax/jquery.pjax.js"></script>
    <script src="~/Scripts/lib/bootstrap-sass/assets/javascripts/bootstrap.min.js"></script>

    <!-- page template -->
    <script type="text/template" id="message-template">
        <div class="sender pull-left">
            <div class="icon">
                <img src="~/Content/img/2.png" class="img-circle" alt="">
            </div>
            <div class="time">
                just now
            </div>
        </div>
        <div class="chat-message-body">
            <span class="arrow"></span>
            <div class="sender"><a href="#">Tikhon Laninga</a></div>
            <div class="text">
                <%- text %>
            </div>
        </div>
    </script>

</body>
</html>