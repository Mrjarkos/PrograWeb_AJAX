@{
    ViewBag.Title = "Listar Reportes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">Reportes de Ruido<br /> <small>Listar Mediciones de Sensores</small></h2>

@if (ViewBag.mensaje != null)
{
    if (ViewBag.error)
    {
        <div class="alert alert-danger">
            @ViewBag.mensaje
        </div>
    }
    else
    {
        <div class="alert alert-success">
            @ViewBag.mensaje
        </div>
    }
}


<section class="widget">
    <header>
        <h4>
            Reportes de Sensores en la base de datos
        </h4>
    </header>
    <div class="widget-table-overflow mt-3">
        <form>
            <div class="form-row">
                <div class="col-md-1">
                    <label for="N_items_select">Numero de Items</label>
                </div>
                <div class="col-md-1">
                    <select id="N_items_select" class="form-control">
                        <option>5</option>
                        <option selected>10</option>
                        <option>25</option>
                        <option>50</option>
                        <option>100</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <a class="btn btn-lg btn-primary" name="filter_bnt" id="filter_bnt" role="button">Borrar Filtros</a>
                </div>
            </div>
        </form>
        <table id="myTable" class="table table-striped table-lg mt-sm mb-0 sources-table">
            <thead>
                <tr>
                    <th style="vertical-align:central">Id</th>
                    <th>Serial del Sensor</th>
                    <th>Medición</th>
                    <th>Latitud</th>
                    <th>Longitud</th>
                    <th colspan="2">Fecha Reportada</th>
                </tr>
                <tr>
                    <th><input type="text" class="form-control" id="id_search" name="id_search" placeholder="Id" /></th>
                    <th><input type="text" class="form-control" id="id_sensor_search" name="id_sensor_search" placeholder="Sensor" /></th>
                    <th><input type="text" class="form-control" id="medicion_search" name="medicion_search" placeholder="Medicion" /></th>
                    <th><input type="text" class="form-control" id="latitud_search" name="latitud_search" placeholder="Latitud" /></th>
                    <th><input type="text" class="form-control" id="longitud_search" name="longitud_search" placeholder="Longitud" /></th>
                    <th>
                        <div class="form-group pmd-textfield pmd-textfield-floating-label">
                            <label class="control-label" for="Date_init_search">Start Date</label>
                            <input type="datetime-local" class="form-control" id="Date_init_search" name="Date_init_search" placeholder="Fecha Inicial">
                        </div>
                    </th>
                    <th>
                        <div class="form-group pmd-textfield pmd-textfield-floating-label">
                            <label class="control-label" for="Date_final_search">End Date</label>
                            <input type="datetime-local" class="form-control" id="Date_final_search" name="Date_final_search" placeholder="Fecha Final">
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody id="MyTbody" name="MyTbody">
        </table>
    </div>
</section>

<section class="widget">
    <h4>
        Paginación
    </h4>
    <div class="pagination mx-3 px-3">
        <input type="button" class="btn btn-info" value="&laquo" id="Bback" />
        <input type="button" class="btn btn-warning" value="" id="B0" />
        <input type="button" class="btn btn-primary" value="" id="B1" />
        <input type="button" class="btn btn-primary" value="" id="B2" />
        <input type="button" class="ActualPage btn btn-success" value="" id="B3" />
        <input type="button" class="btn btn-primary" value="" id="B4" />
        <input type="button" class="btn btn-primary" value="" id="B5" />
        <input type="button" class="btn btn-warning" value="" id="BN" />
        <input type="button" class="btn btn-info" value="&raquo" id="Bfollow" />
    </div>

</section>

<script src="~/Scripts/js/Chart.js"></script>
<script src="~/Scripts/utils.js"></script>

<section class="widget">
    <a class="btn btn-lg btn-success" name="grafic_bnt" id="grafic_bnt" role="button">Graficar Datos</a>
</section>
<style>
    canvas {
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
        fill: #ffffff;
    }
</style>

<section class="widget">
    <header>
        <h4>
            Datos de Ruido promedio por fecha
        </h4>
    </header>
    <div class="m-2">
        <canvas id="canvas"></canvas>
    </div>
</section>

<script src="~/Scripts/Reportes.js"></script>

<script>
    document.getElementById("Sensor").class = "panel";
    document.getElementById("Home").class = "panel";
    document.getElementById("User").class = "panel";
    document.getElementById("Reporte").class = "active";
</script>
