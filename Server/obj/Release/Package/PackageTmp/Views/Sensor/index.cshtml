@model Server.Models.SensorView
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">Registro de sensores </h2>

@if (ViewBag.mensaje != null)
{
    if (ViewBag.error)
    {
        <div class="alert alert-danger">
            @ViewBag.mensaje
        </div>
    }
    else
    {
        <div class="alert alert-success">
            @ViewBag.mensaje
        </div>
    }
}

<section class="widget">

    <div class="widget-table-overflow mt-3">
        <form>
            <div class="form-row">
                <div class="col-md-1">
                    <label for="N_items_select">Numero de Items</label>
                </div>
                <div class="col-md-1">
                    <select id="N_items_select" class="form-control">
                        <option>5</option>
                        <option selected>10</option>
                        <option>25</option>
                        <option>50</option>
                        <option>100</option>
                    </select>
                </div>
            </div>
        </form>
                    
        <table id="myTable" class="table table-striped table-lg mt-sm mb-0 sources-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Sensor Id</th>
                    <th>Valor Medido</th>
                    <th>Fecha y Hora registrada</th>
                </tr>
                <tr>
                    <th><input type="text" class="form-control" id="id_search" name="id_search" placeholder="Id" /></th>
                    <th><input type="text" class="form-control" id="id_sensor_search" name="id_sensor_search" placeholder="Id Sensor" /></th>
                    <th><input type="text" class="form-control" id="medicion_search" name="medicion_search" placeholder="Medición" /></th>
                    <th><input type="text" class="form-control" id="Fecha_search" name="Fecha_search" placeholder="Fecha y Hora" /></th>
                </tr>
            </thead>
            <tbody id="MyTbody" name="MyTbody">
            </tbody>
        </table>
    </div>

    <div class="pagination">
        <input type="button" class="btn btn-info" value="&laquo" id="Bback" />
        <input type="button" class="btn btn-warning" value="" id="B0" />
        <input type="button" class="btn btn-primary" value="" id="B1" />
        <input type="button" class="btn btn-primary" value="" id="B2" />
        <input type="button" class="ActualPage btn btn-success" value="" id="B3" />
        <input type="button" class="btn btn-primary" value="" id="B4" />
        <input type="button" class="btn btn-primary" value="" id="B5" />
        <input type="button" class="btn btn-warning" value="" id="BN" />
        <input type="button" class="btn btn-info" value="&raquo" id="Bfollow" />
    </div>

    <script src="~/Scripts/Sensores.js"></script>

</section>









