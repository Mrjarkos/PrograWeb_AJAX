@model Ejemplo1.Models.UsuarioView
@{
    ViewBag.Title = "Load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">Usuarios <small>Listar</small></h2>
<section class="widget">
    <a class="btn btn-lg btn-success" href="/User/Add" role="button">Crear</a>
</section>

@if (ViewBag.mensaje != null)
{
    if (ViewBag.error)
    {
        <div class="alert alert-danger">
            @ViewBag.mensaje
        </div>
    }
    else
    {
        <div class="alert alert-success">
            @ViewBag.mensaje
        </div>
    }
}

<section class="widget">
    <header>
        <h4>
            Usuarios en la base de datos
        </h4>
        <div class="widget-controls">
            <a data-widgster="expand" title="Expandir" href="#"><i class="glyphicon glyphicon-plus"></i></a>
            <a data-widgster="collapse" title="Colapsar" href="#"><i class="glyphicon glyphicon-minus"></i></a>
            <a data-widgster="close" title="Cerrar" href="#"><i class="glyphicon glyphicon-remove"></i></a>
        </div>
    </header>
    <div class="widget-table-overflow">
        <table id="myTable" class="table table-striped table-lg mt-sm mb-0 sources-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Tipo de Documento</th>
                    <th>Número de Documento</th>
                    <th>Correo</th>
                    <th>Rol</th>
                    <th>Editar</th>
                    <th>Borrar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.usuarios)
                {
                    <tr>

                        <td>@a.ID</td>
                        <td>@a.NOMBRE</td>
                        <td>@a.DOC_TYPE</td>
                        <td>@a.DOCUMENTO</td>
                        <td>@a.CORREO</td>
                        <td>@a.ROL</td>
                        <td>
                            <form action="/User/Modify" method="post">
                                <input class="btn btn-warning glyphicon glyphicon-pencil" type="submit" id=@a.ID.ToString() value=@a.ID.ToString() name="id" />
                                <input type="text" hidden value="0" name="flag">
                            </form>
                        </td>
                        <td>
                            <form action="/User/Delete" method="post">
                                <input class="btn btn-danger glyphicon glyphicon-pencil" type="submit" id=@a.ID.ToString() value=@a.ID.ToString() name="id" />
                                <input type="text" hidden value="0" name="flag">
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
