@model Server.Models.SensorView
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="page-title">Registro de sensores </h2>

@if (ViewBag.mensaje != null)
{
    if (ViewBag.error)
    {
        <div class="alert alert-danger">
            @ViewBag.mensaje
        </div>
    }
    else
    {
        <div class="alert alert-success">
            @ViewBag.mensaje
        </div>
    }
}

<section class="widget">
    <header>
        <h4>
            Registros de datos de sensores
        </h4>
    </header>
    <div class="widget-table-overflow">

        <table id="myTable" class="table table-striped table-lg mt-sm mb-0 sources-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Sensor Id</th>
                    <th>Valor Medido</th>
                    <th>Fecha y Hora registrada</th>
                </tr>
                <tr>
                    <th><input type="text" id="id_search" name="id_search"/></th>
                    <th><input type="text" id="id_sensor_search" name="id_sensor_search"/></th>
                    <th><input type="text" id="medicion_search" name="medicion_search"/></th>
                    <th><input type="text" id="Fecha_search" name="Fecha_search"/></th>
                </tr>
            </thead>
            <tbody id="MyTbody" name="MyTbody">
            </tbody>
        </table>
    </div>
    <script src="~/Scripts/Sensores.js"></script>

</section>









